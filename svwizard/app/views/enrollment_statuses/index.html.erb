<h1>Listing enrollment_statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollment_statuses.each do |enrollment_status| %>
      <tr>
        <td><%= enrollment_status.name %></td>
        <td><%= link_to 'Show', enrollment_status %></td>
        <td><%= link_to 'Edit', edit_enrollment_status_path(enrollment_status) %></td>
        <td><%= link_to 'Destroy', enrollment_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

