<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Conference</th>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Slots</th>
      <th>Hours</th>
      <th>Priority</th>
      <th>Invisible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.conference %></td>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.location %></td>
        <td><%= task.day %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td><%= task.slots %></td>
        <td><%= task.hours %></td>
        <td><%= task.priority %></td>
        <td><%= task.invisible %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
