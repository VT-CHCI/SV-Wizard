<h1>Listing enrollments</h1>

<table>
  <thead>
    <tr>
      <th>Conference</th>
      <th>User</th>
      <th>Enrollment status</th>
      <th>Lottery</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.conference %></td>
        <td><%= enrollment.user %></td>
        <td><%= enrollment.enrollment_status %></td>
        <td><%= enrollment.lottery %></td>
        <td><%= enrollment.comment %></td>
        <td><%= link_to 'Show', enrollment %></td>
        <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
        <td><%= link_to 'Destroy', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %>
