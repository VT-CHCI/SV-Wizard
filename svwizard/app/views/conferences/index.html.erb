<h1>Listing conferences</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th>Year</th>
      <th>Email</th>
      <th>Volunteers</th>
      <th>Volunteer hours</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Bid day</th>
      <th>Status</th>
      <th>Maintenance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conferences.each do |conference| %>
      <tr>
        <td><%= conference.name %></td>
        <td><%= conference.short_name %></td>
        <td><%= conference.year %></td>
        <td><%= conference.email %></td>
        <td><%= conference.volunteers %></td>
        <td><%= conference.volunteer_hours %></td>
        <td><%= conference.start_date %></td>
        <td><%= conference.end_date %></td>
        <td><%= conference.bid_day %></td>
        <td><%= conference.status %></td>
        <td><%= conference.maintenance %></td>
        <td><%= link_to 'Show', conference %></td>
        <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
        <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

